# Minimal Gemfile so the runner installs the same Jekyll we expect
source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "kramdown-parser-gfm", "~> 1.1"
gem "webrick", "~> 1.8"

# Plugins must be grouped properly so Jekyll loads them
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-feed"
end
